    {
      "type": "input-group",
      "col": { "sm": 10 },
      "inputs": [
        {
          "type": "input",
          "ref": "name",
          "label": "Name",
          "locked": false,
          "col": {
            "sm": 9
          }
        },
        {
          "type": "input",
          "ref": "symbol",
          "label": "Symbol",
          "locked": false,
          "col": {
            "sm": 3
          }
        },
        {
          "type": "input",
          "ref": "description",
          "label": "Description",
          "locked": false
        }
      ]
    },
    {
      "type": "input",
      "ref": "trustedForwarders",
      "label": "Trusted Forwarders",
      "defaultValue": { "ref": "trustedForwarders" },
      "locked": false,
      "component": {
        "type": "hidden"
      }
    },
    {
      "type": "input",
      "ref": "saleRecipient",
      "label": "Sale Recipient",
      "locked": false,
      "component": {
        "type": "address",
        "subtype": "connected-address"
      }
    },
    {
      "type": "input-group",
      "inputs": [
        {
          "type": "input",
          "ref": "royaltyRecipient",
