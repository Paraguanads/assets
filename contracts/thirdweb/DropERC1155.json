            "type": "address",
            "subtype": "connected-address"
          },
          "col": { "sm": 9, "xs": 12 }
        },
        {
          "type": "input",
          "ref": "royaltyBps",
          "label": "Royalty Percentage",
          "locked": false,
          "col": { "sm": 3, "xs": 12 },
          "component": {
            "type": "decimal",
            "decimals": 2
          }
        }
      ]
    },

    {
      "type": "input-group",
      "inputs": [
        {
          "type": "input",
          "ref": "platformFeeRecipient",
          "label": "Recipient Address",
          "locked": false,
          "component": {
            "type": "address",
            "subtype": "connected-address"
          },
          "col": { "sm": 9, "xs": 12 }
        },
        {
          "type": "input",
          "ref": "platformFeeBps",
          "label": "Platform Fee Percentage",
          "locked": false,
          "col": { "sm": 3, "xs": 12 },
          "component": {
            "type": "decimal",
            "decimals": 2
          }
        }
      ]
