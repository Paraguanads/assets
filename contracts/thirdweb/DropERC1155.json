{
  "paramsOrder": [
    "_defaultAdmin",
    "name",
    "symbol",
    "contractURI",
    "trustedForwarders",
    "saleRecipient",
    "royaltyRecipient",
    "royaltyBps",
    "platformFeeBps",
    "platformFeeRecipient"
  ],
  "output": [
